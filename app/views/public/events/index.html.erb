<%= render 'layouts/public_header' %>
<div class="container">
  <h2>タスク一覧</h2>
  <div class="row">
    <h3>ジャンル検索</h3>
    <%= form_with url: events_path, method: :get do |f| %>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), :prompt => "選択してください" %>
      <%= f.submit "検索" %>
    <% end %>
    <%= form_with url: events_path, method: :get do |f| %>
      <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :last_name), :prompt => "選択してください" %>
      <%= f.submit "検索" %>
    <% end %>
    <%= form_with url: events_path, method: :get do |f| %>
      <%= f.select :is_finished, Event.is_finisheds.keys.map {|k| [t("enum.event.is_finished.#{k}"), k]}, :prompt => "選択してください" %>
      <%= f.submit "検索" %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <tr>
          <td>日付</td>
          <td>ジャンル</td>
          <td>タイトル</td>
          <td>登録者</td>
          <td>進捗状況</td>
        </tr>
        <% @events.each do |event| %>
        <tr>
          <td><%= l event.start_time, format: :day %></td>
          <td><%= event.genre.name %></td>
          <td>
            <%= link_to(event_path(event)) do %>
              <%= event.title %>
            <% end %>
          </td>
          <td><%= event.user.last_name %><%= event.user.first_name %></td> <!--担当者に変更必要-->
          <td><%= event.is_finished_i18n %></td>
        </tr>
        <% end %>
      </table>
  </div>
</div>