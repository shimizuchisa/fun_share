<%= render 'layouts/public_header' %>
<div class="container">
  <%= render 'layouts/error_messages', variable: @event %>
  <h1>新規タスク登録</h1>
  <div class="row">
					<div class="col-md-10">
					  <%= form_with model: @event, url: events_path do |f| %>
            <table class="table">
              <tr>
                <td><%= f.label :genre_id, "ジャンル" %></td>
                <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), :prompt => "選択してください", class: "form-control" %></td>
                <!--f.select :プロパティ名, options_from_collection_for_select(モデル, :フォームで送る値(メソッド), :セレクトボックスに表示する値(メソッド))-->
              </tr>
              <tr>
                <td><%= f.label :title, "タイトル" %></td>
                <td><%= f.text_field :title, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :body, "内容" %></td>
                <td><%= f.text_area :body, row: 3, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :start_on, "日付" %></td>
                <td><%= f.date_field :start_on %></td>
              </tr>
              <!--<tr>-->
              <!--  <td><%= f.label :start_time, "開始時間" %></td>-->
              <!--  <td><%= f.time_select :start_time %></td>-->
              <!--</tr>-->
              <!--<tr>-->
              <!--  <td><%= f.label :end_time, "終了時間" %></td>-->
              <!--  <td><%= f.time_select :end_time %></td>-->
              <!--</tr>-->
              <tr>
                <td><%= f.label :start_time, "開始時間" %></td>
                <td><%= f.select :start_time, times %></td>
              </tr>
               <tr>
                <td><%= f.label :end_time, "終了時間select" %></td>
                <td><%= f.select :end_time, times %></td><!--selected: Time.current.to_s -->
              </tr>
            </table>
            <div>
              <td><%= f.submit "新規登録", class: "btn btn-success btn-lg col-4" %></td>
            </div>
            <% end %>
    </div>
  </div>
</div>
