<%= render 'layouts/public_header' %>
<div class="container">
  <% if flash[:danger] %> <!--sessions_conntroller.rb reject_inactive_user-->
    <p class="color-red"><%= flash[:danger] %></p>
  <% end %>
  <h2>ログイン</h2>
    <div class="row">
      <div class="col-md-10">
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-success" %>
            <%= link_to "ゲストログインはこちら（閲覧用）", public_guest_sign_in_path, method: :post, class: "btn btn-danger"  %>
          </div>
          <%= render "public/shared/links" %>
        <% end %>
    </div>
  </div>
</div>