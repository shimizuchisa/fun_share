<div class="container">
  <%= render 'layouts/notice_expression' %>
  <h2>ログイン</h2>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <%= form_with model: @user, url: user_session_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "次回から自動的にログイン" %>
        </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-success" %>
          <%= link_to "ゲストログインはこちら（閲覧用）", public_guest_sign_in_path, method: :post, class: "btn btn-danger"  %>
        </div>
        <%= render "public/shared/links" %>
      <% end %>
    </div>
  </div>
</div>