<%= render 'layouts/public_header' %>
<div class="container">
  <h1>タスク詳細</h1>
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-7">
      <div class="row">
        <%= render 'layouts/task_show', task: @task %>
      </div>

      <div class="row">
        <%= link_to "タスク編集", edit_task_path(@task), class: "btn btn-primary" %>
      </div>

      <div class="row mt-4">
        <%= render 'layouts/charge_index', charges: @charges %>
      </div>
      <% if @task.charged_by?(current_user) %>
        <div class="row">
          <%= link_to task_charges_path(@task), method: :delete do %>
            <btn class="btn btn-success">辞退する</btn>
          <% end %>
        </div>
      <% else %>
        <div class="row">
          <%= link_to task_charges_path(@task), method: :post do %>
            <btn class="btn btn-success">担当する</btn>
          <% end %>
        </div>
      <% end %>
      <div class="row mt-3">
        <h3 class="mt-3">コメント一覧</h3>
          <table class="table">
            <tr>
              <th>投稿者</th>
              <th>コメント</th>
            </tr>
            <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.user.last_name %><%= comment.user.first_name %></td>
              <td><%= comment.comment %></td>
            </tr>
            <% end %>
          </table>
          <table class="table">
            <%= form_with model: @comment, url: task_comments_path(@task), method: :post do |f| %>
              <%= f.label :comment, "新規投稿" %>
              <%= f.text_area :comment, row: 3, class: "form-control" %>
              <%= f.submit "投稿する", class: "btn btn-success" %>
            <% end %>
          </table>
      </div>
    </div>
  </div>
</div>