<%= render 'layouts/public_header' %>

<div class="container">
  <div class="row">
    <div class="col-md-10">
    <%= form_with model: @task, url: task_path(@task), method: :patch do |f| %>
  <table class="table">
      <tr>
        <td><%= f.label :genre_id, "ジャンル" %></td>
        <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
        <!--f.select :プロパティ名, options_from_collection_for_select(モデル, :フォームで送る値(メソッド), :セレクトボックスに表示する値(メソッド))-->
      </tr>
      <tr>
        <td><%= f.label :title, "タイトル" %></td>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <td><%= f.label :body, "内容" %></td>
        <td><%= f.text_area :body, row: 3 %></td>
      </tr>
      <tr>
        <td><%= f.label :start_time, "開始時間" %></td>
        <td><%= f.datetime_field :start_time %></td>
      </tr>
      <tr>
        <td><%= f.label :end_time, "終了時間" %></td>
        <td><%= f.datetime_field :end_time %></td>
      </tr>
      <tr>
        <td><%= f.label :charge_id, "担当者" %></td>
        <td><%= f.select :charge_id, options_from_collection_for_select(User.all, :id, :last_name) %></td>
      </tr>
      <!--<tr>-->
        <!--<td>%= f.label :is_finished, "進捗状況" %></td>-->
        <!--<td>%= f.select : %></td>-->
      <!--</tr>-->
      <tr>
        <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
      </tr>
  </table>
        <!--= f.label :created_at, class: 'control-label'-->
        <!--= f.datetime_field :created_at, class: 'form-control'-->
<% end %>

    </div>
  </div>
</div>
