<div class="container">
  <%= render 'layouts/error_messages', variable: @user %>
  <div class="row mt-5">
    <div class="col-md-8 mx-auto">
      <h2>会員情報編集</h2>
      <%= form_with model: @user, url: users_mypage_path, method: :patch do |f| %>
      <div class="form-field mt-3">
        <%= f.label :last_name, "姓" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      </div>
      <div class="form-field mt-3">
        <%= f.label :first_name, "名" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
      <div class="form-field mt-3">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-field mt-3">
        <%= f.label :telephone_number, "電話番号(半角ハイフンなし)" %><br />
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
      </div>
      <div class="form-action mt-3">
        <%= f.submit "変更を保存", class: "btn btn-primary col-md-3" %>
        <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger col-md-3 offset-md-5" %>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

