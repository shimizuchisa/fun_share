<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
    <h2>管理者ログイン</h2>
    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <td class="col-3"><%= f.label :email, "メールアドレス" %></td><br />
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
        </tr>
        <tr class="mt-3">
          <td class="col-3"><%= f.label :password, "パスワード" %></td><br />
          <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
        </tr>
      </table>
      <% if devise_mapping.rememberable? %>
      <div class="field mt-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "次回から自動的にログイン" %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>
    <%= render "admin/shared/links" %>
    </div>
  </div>
</div>