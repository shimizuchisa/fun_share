<%= render 'layouts/admin_header' %>
<div class="container">
  <h2>タスク詳細</h2>
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <%= render 'layouts/task_show', task: @task %>
      </div>
      <div>
        <p>
          <% if @task.favorites.exists? %>
            ❤<%= @task.favorites.count %> いいね
          <% else %>
            ♡<%= @task.favorites.count %> いいね
          <% end %>
        </p>
      </div>
      <div class="row">
        <%= link_to "編集する", edit_admin_task_path(@task), class: "btn btn-primary" %>
      </div>
      <div class="row">
        <%= render 'layouts/charge_index', charges: @charges %>
      </div>
      <div class="row mt-3">
        <%= render 'layouts/comment_index', comments: @comments %>
      </div>
    </div>
  </div>
</div>