<div class="container">
  <%= render 'layouts/notice_expression' %>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>タスク編集</h2>
        <%= form_with model: @event, url: admin_event_path(@event), method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :genre_id, "ジャンル" %></td>
            <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), {:prompt => "選択してください" }, class: "form-control" %></td>
            <!--f.select :プロパティ名, options_from_collection_for_select(モデル, :フォームで送る値(メソッド), :セレクトボックスに表示する値(メソッド))-->
          </tr>
          <tr>
            <td><%= f.label :title, "タイトル" %></td>
            <td><%= f.text_field :title, class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :body, "内容" %></td>
            <td><%= f.text_area :body, row: 3 , class: "form-control"%></td>
          </tr>
          <tr>
            <td><%= f.label :start_on, "日付" %></td>
            <td><%= f.date_field :start_on, value: @event.start_time.to_date , class: "form-control"%></td>
          </tr>
          <tr>
            <td><%= f.label :start_time, "開始時間" %></td>
            <td><%= f.time_select :start_time, {minute_step: 30} , class: "form-control"%></td>
          </tr>
          <tr>
            <td><%= f.label :end_time, "終了時間" %></td>
            <td><%= f.time_select :end_time, {minute_step: 30}, class: "form-control"%></td>
          </tr>
          <tr>
            <td><%= f.label :is_finished, "進捗状況" %></td>
            <td><%= f.select :is_finished, Event.is_finisheds_i18n.invert, {}, class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>