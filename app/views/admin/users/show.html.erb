<%= render 'layouts/admin_header' %>
<div class="container">
  <h2>会員情報詳細</h2>
  <div class="row">
    <div class="col-md-10">
      <%= render 'layouts/user_show', user: @user %>
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <table>
          <tr>
            <td><%= f.label :is_deleted, "会員ステータス" %></td>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効" %>
            </td>
            <td>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "無効" %>
            </td>
            <td><%= f.submit "ステータスを変更", class: "btn btn-primary" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>

