

<%= render 'layouts/admin_header' %>
<div class="container">
  <h2>会員一覧</h2>
  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to(admin_user_path(user)) do %>
                <%= user.last_name %><%= user.first_name %>
              <% end %>
            </td>
            <td>
              <% if user.is_deleted == false %>
                有効
              <% else %>
                無効
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

