<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2><%= @user.name_display %>さんの投稿コメント一覧</h2>
      <div class="mt-4 mb-4 offset-md-10">
        <%= link_to "全コメント削除", admin_user_comments_destroy_all_path(@user, user_id: @user.id) , method: :delete, data: { confirm: '削除しますか？' }, class: "btn btn-danger" %>
      </div>
      <table class="table table-light">
        <tr>
          <th>日付</th>
          <th>ジャンル</th>
          <th>タスク名</th>
          <th>コメント</th>
          <th></th>
        </tr>
        <% @comments.each do |comment| %>
        <tr>
          <td><%= l comment.created_at, format: :day %></td>
          <td><%= comment.event.genre.name %></td>
          <td>
            <%= link_to(admin_event_path(comment.event)) do %>
              <%= comment.event.title %>
            <% end %>
          </td>
          <td><%= comment.body %></td>
        </tr>
        <% end %>
      </table>
      <div class="w-100">
        <%= paginate @comments %>
      </div>
    </div>
  </div>
</div>

