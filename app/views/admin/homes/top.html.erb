<%= render 'layouts/admin_header' %>
<div class="container">
  <h1>カレンダー</h1>
  <div class="row">
    <div class="col-md-10">
      <%= month_calendar events: @events do |date, events| %>
      <div>
        <%= date.day %>
      </div>
        <% events.each do |event| %>
          <%= link_to(admin_event_path(event)) do %>
            <div>
              <%= event.title %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
