<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-md-10 form-group">
      <%= form_with model: @genre, url: admin_genres_create_path, method: :put do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_area :name, class: "form-control" %>
        </div>
        <div class="form-action">
          <%= f.submit "ジャンル登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンルID</th>
            <th>名前</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
