<%= render 'layouts/admin_header' %>

<div class="container">
  <h1>ジャンル一覧</h1>
  <div class="row">
    <div class="col-md-6 form-group">
      <h4 class="mt-4">新規ジャンル登録</h4>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-group mt-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-action">
          <%= f.submit "ジャンル登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <thead class="table-light" >
          <tr>
            <th>ジャンルID</th>
            <th>名前</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td>
              <%= link_to(edit_admin_genre_path(genre)) do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
