<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto form-group">
    <%= render 'layouts/error_messages', variable: @genre %>
    <h1>ジャンル編集</h1>
      <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
        <div class="form-group form-inline">
          <%= f.label :name, "ジャンル名：", class: "mt-3"  %>
          <%= f.text_field :name, placeholder: "2~10文字以内で記載してください", class: "form-control mt-3 ml-3" %>
        </div>
        <div>
          <%= f.submit "変更を保存", class: "btn btn-primary mt-3 col-sm-3" %>
        </div>
        <div>
          <%= link_to "削除", admin_genre_path(@genre), method: :delete, class: "mt-3 col-sm-3 btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
