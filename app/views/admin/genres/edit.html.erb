<%= render 'layouts/admin_header' %>
<div class="container">
  <%= render 'layouts/notice_expression' %>
  <h1>ジャンル編集</h1>
  <div class="row">
    <div class="col-md-10 form-group">
      <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-action">
          <%= f.submit "変更を保存", class: "btn btn-primary mr-5" %>
          <%= link_to "削除", admin_genre_path(@genre), method: :delete, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
