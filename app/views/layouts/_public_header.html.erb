<header class="mb-5">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/">fun share</a>
        <!--ログインしている人の名前を表示-->
        <% if user_signed_in? %>
          <p><%= current_user.last_name %><%= current_user.first_name %>さん</p>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to "カレンダー", root_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "マイページ", users_mypage_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "タスク一覧", events_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "新規タスク", new_event_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            <% else %>
              <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <div class="container">
  <div class="col-3 ml-auto">
    <%= form_with url: events_path, method: :get do |f| %>
      <table>
        <tr>
          <td><%= f.text_field :search, class: "form-control" %></td>
          <td><%= f.submit "検索", class: "btn btn-primary" %></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</header>