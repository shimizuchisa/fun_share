<h3 class="mt-3">コメント一覧</h3>
  <table class="table">
    <tr>
      <th>投稿者</th>
      <th>コメント</th>
    </tr>
    <% comments.each do |comment| %>
    <tr>
      <td><%= comment.user.last_name %><%= comment.user.first_name %></td>
      <td><%= comment.comment %></td>
    </tr>
    <% end %>
  </table>
  <div class="w-100">
    <%= paginate comments %>
  </div>